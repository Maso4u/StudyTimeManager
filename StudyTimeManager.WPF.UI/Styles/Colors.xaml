<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
   
    <Color x:Key="Background">#f9f9f9</Color>
    <SolidColorBrush x:Key="BackgroundCustomBrush" Color="{StaticResource Background}"/>

    <Color x:Key="SecondaryColor">#ff9e27</Color>
    <SolidColorBrush x:Key="BackgroundBrush"
                     Color="{StaticResource SecondaryColor}"/>

    <Color x:Key="ButtonForeground">#ffffff</Color>
    <SolidColorBrush x:Key="ButtonForegroundBrush" Color="{StaticResource ButtonForeground}"/>
    
    <Color x:Key="IconForegroundMain">#535353</Color>
    <SolidColorBrush x:Key="IconForegroundMainBrush" Color="{StaticResource IconForegroundMain}"/>

    <Color x:Key="ForegroundMain">#3D3C3C</Color>
    <SolidColorBrush x:Key="ForegroundMainBrush" Color="{StaticResource ForegroundMain}"/>

    <Color x:Key="ButtonBackground">#278AFF</Color>
    <SolidColorBrush x:Key="ButtonBackgroundBrush" Color="{StaticResource ButtonBackground}"/>

    <Color x:Key="DeleteButtonBackground">#f64d5c</Color>
    <SolidColorBrush x:Key="DeleteButtonBackgroundBrush" Color="{StaticResource DeleteButtonBackground}"/>

    <Color x:Key="TextBoxBorder">#a2a2a2</Color>
    <SolidColorBrush x:Key="TextBoxBorderBrush" Color="{StaticResource TextBoxBorder}"/>
</ResourceDictionary>